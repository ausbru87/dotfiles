# Git configuration for Coder workspaces
# Note: user.name and user.email are set by install.sh from Coder env vars

[init]
    defaultBranch = main

[core]
    editor = vim
    autocrlf = input
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    pager = less -FRX
    excludesFile = ~/.gitignore_global

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

[pull]
    rebase = true

[push]
    default = current
    autoSetupRemote = true
    followTags = true

[fetch]
    prune = true
    pruneTags = true

[rebase]
    autoStash = true
    autoSquash = true

[merge]
    conflictstyle = diff3
    ff = false

[diff]
    colorMoved = zebra
    algorithm = histogram
    tool = vimdiff

[status]
    showUntrackedFiles = all
    submoduleSummary = true

[log]
    abbrevCommit = true
    date = relative

[format]
    pretty = format:%C(auto)%h %C(blue)%ad %C(green)%an%C(auto)%d %s

[alias]
    # Status shortcuts
    s = status -sb
    st = status
    
    # Branch operations
    b = branch
    ba = branch -a
    bd = branch -d
    bD = branch -D
    
    # Checkout
    co = checkout
    cob = checkout -b
    
    # Commit
    c = commit
    cm = commit -m
    ca = commit --amend
    can = commit --amend --no-edit
    
    # Add
    a = add
    aa = add --all
    ap = add --patch
    
    # Diff
    d = diff
    ds = diff --staged
    dc = diff --cached
    
    # Push/Pull
    p = push
    pf = push --force-with-lease
    pl = pull
    
    # Log variations
    l = log --oneline -20
    lg = log --graph --oneline --decorate --all
    ll = log --pretty=format:'%C(yellow)%h%Creset %s %C(green)(%cr) %C(blue)<%an>%Creset' --abbrev-commit
    last = log -1 HEAD --stat
    
    # Show recent branches
    recent = for-each-ref --sort=-committerdate --count=10 --format='%(refname:short)' refs/heads/
    
    # Undo operations
    unstage = reset HEAD --
    undo = reset --soft HEAD~1
    discard = checkout --
    
    # Stash operations
    stash-all = stash save --include-untracked
    sl = stash list
    sp = stash pop
    ss = stash show -p
    
    # Clean
    cleanup = !git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d
    
    # Find
    find = "!git ls-files | grep -i"
    grep = grep -Ii
    
    # Show aliases
    aliases = config --get-regexp alias
    
    # What changed
    today = log --since=midnight --author='$(git config user.email)' --oneline
    week = log --since='1 week ago' --author='$(git config user.email)' --oneline
    
    # Contributors
    contributors = shortlog -sn --no-merges
    
    # File history
    history = log --follow -p --
    
    # Interactive rebase
    ri = rebase -i
    rc = rebase --continue
    ra = rebase --abort

[credential]
    helper = store

[help]
    autocorrect = prompt

[rerere]
    enabled = true

# URL shorthands
[url "git@github.com:"]
    insteadOf = gh:
    pushInsteadOf = github:
    pushInsteadOf = git://github.com/

[url "git@gitlab.com:"]
    insteadOf = gl:
    pushInsteadOf = gitlab:
    pushInsteadOf = git://gitlab.com/

[url "git@bitbucket.org:"]
    insteadOf = bb:
    pushInsteadOf = bitbucket:
    pushInsteadOf = git://bitbucket.org/
